<div class="row">
<div class="col-md-6 offset-md-3 mt-5">
<%= form_with id: 'create-user-form', model: @event do |form|%>
<h1> Create event </h1>
<%= form.text_field :title, placeholder: 'Enter title of event' %>
<%= form.text_area :description, placeholder: 'Enter description of event'%>
<%= form.text_field :location, placeholder: 'Enter event location'%>
<%= form.datetime_select :date_time %> <br/>
<%= form.submit id: 'create_event', class:'btn btn-primary mt-3' %><br/>
<% end %>

</div>
</div>